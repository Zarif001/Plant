header.header
    .header__content 
        .header__content-picture  
            img(src="./images/header-bg.webp" alt="").header__content-img
        .header__content-info
            .header__content-about 
                a(href="")
                    img(src="./images/burger.svg" alt="").header__info-img  
                a(href="").header__info-text RESERVATION
            .header__info  
                img(src="./images/logo.webp" alt="")  
                h2.header__info-title LA PERLE
                h5.header__info-describe French gourmet   
                ul 
                    -var list = ['MENU','ABOUT','RESERVATIONS','NEWS', 'EVENTS','CAREERS','CONTACT']
                    each item in list 
                        li: a(href="").header__info-link=item 
                .header__info-emblems
                    img(src="./images/meta.svg" alt="")
                    img(src="./images/insta.svg" alt="").header__emblems-img
                    img(src="./images/tg.svg", alt="")
                    p.header__info-language EN/RU


